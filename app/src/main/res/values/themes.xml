<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SistersLabProjectRecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">#781A1A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/beige</item>
        <item name="colorOnError">@color/red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SistersLabProjectRecipes" parent="Base.Theme.SistersLabProjectRecipes" />

    <!-- Launcher theme. -->
    <style name="Launcher" parent="Theme.AppCompat.Light.NoActionBar">   <!-- PARENT ALMAK ZORUNDA  -->
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <!-- Launcher theme Full Screen -->
    <style name="LauncherFullScreen">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>